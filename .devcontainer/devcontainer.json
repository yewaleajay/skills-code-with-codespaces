{
  "name": "Basic Dev Environment",
  "image": "mcr.microsoft.com/vscode/devcontainers/base:debian",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "installTools": true,
      "version": "3.10",
      "postCreateCommand": ".devcontainer/postCreate.sh"
    }
  },
  "customizations": {
    "postCreateCommand": ".devcontainer/postCreate.sh",
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.debugpy"
        
      ]
    }
  }
}